{
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types", // 默认值
			"types"
		],
		"types": ["element-plus/global"],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		},
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": [
		"tests/**/*.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"types/**/*.ts",
		"build/**/*.ts",
		"build/**/*.d.ts",
		"mock/**/*.ts",
		"vite.config.ts"
	],
	"exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
